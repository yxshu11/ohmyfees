<% provide(:title, 'All Students') %>

<div class="container">
<h1>All Students</h1>
  <div class="row">
    <div class="col-md-12 well">
    <%= will_paginate %>
      <table class="table">
        <tr>
          <td class="no-repeat-header">ID</td>
          <td class="no-repeat-header">Name</td>
          <td class="no-repeat-header">TP Number</td>
          <td class="no-repeat-header">Email</td>
          <td class="no-repeat-header">Contact Number</td>
          <td class="no-repeat-header">Action</td>
        </tr>
        <% @students.each do |s| %>
        <tr>
          <td><%= s.id %></td>
          <td><%= s.name %></td>
          <td><%= s.student_number %></td>
          <td><%= s.email %></td>
          <td><%= s.contact_number %></td>
          <td>
            <%= link_to "Delete", s, method: :delete,
                        data: { confirm: "Comfirm to remove this student?" } %>
          </td>
        </tr>
        <% end %>
      </table>
      <%= will_paginate %>

    <div class="center">
      <%= link_to "Back", root_path, class: "btn btn-primary" %>
    </div>
  </div>
  </div>
</div>
