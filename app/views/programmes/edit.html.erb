<% provide(:title, 'Edit Programme Details') %>

<div class="container">
<h1>Edit Programme Details</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <%= form_for(@programme) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, "Programme Name" %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :programme_type %>
        <%= f.text_field :programme_type, :readonly => true, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_area :description, :size => "30x5", class: 'form-control' %>

        <%= f.submit "Add", class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>
</div>
