<% provide(:title, 'Fee Payment') %>

<div class="container">
  <h1>Fee Payment</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <h4>Fee Details</h4>
      <h5>
        <table class="table">
          <tr>
            <td><b>Name:</b></td>
            <td><%= @student_fee.name %></td>
          </tr>
          <tr>
            <td><b>Description:</b></td>
            <td><%= @student_fee.description %></td>
          </tr>
          <tr>
            <td><b>Amount (Included Fine):</b></td>
            <td>RM&nbsp;<%= @student_fee.amount %></td>
          </tr>
          <tr>
            <td><b>Due Date:</b></td>
            <td><%= @student_fee.due_date %></td>
          </tr>
        </table>
      </h5>
    </div>
  </div>

  <div class="row center">
    <div class="col-md-6 col-md-offset-3 well">
      <%= form_tag(pay_student_student_fee_payments_path, :method => 'post', :multipart => true) do %>
        <!-- <%= image_submit_tag "btn_xpressCheckout.gif", class: "btn btn-default" %> -->
        <%= submit_tag "Pay", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>

