<% provide(:title, 'New Utility Fee') %>

<div class="container">
<h1>Add New Utility Fee</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <%= form_for(@utility_fee) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :amount, "Amount (RM)" %>
        <%= f.text_field :amount, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_area :description, :size => "30x5", class: 'form-control' %>

        <%= f.submit "Add", class: "btn btn-primary" %>

        <section class="center">
        <br>
        <%= link_to "Back", dashboard_path, class: "btn btn-default form-control" %>
        </section>

      <% end %>
    </div>
  </div>
</div>
