<% provide(:title, 'Update Utility Fee') %>

<div class="container">
<h1>Update Utility Fee</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <%= form_for(@utility_fee) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, :disabled => true, class: 'form-control' %>

        <%= f.label :amount, "Amount (RM)" %>
        <%= f.text_field :amount, class: 'form-control' %>

        <%= f.label :repetitive_payment, "Repetitive Payment?" %>
        <%= f.select(:repetitive_payment, [['True',true], ['False',false]],
                    { include_blank: false},
                    { :disabled => true, class: 'form-control'}) %>

        <%= f.label :description %>
        <%= f.text_area :description, :size => "30x5", class: 'form-control' %>

        <%= f.submit "Update", class: "btn btn-primary" %>

        <section class="center">
        <br>
        <%= link_to "Back", utility_fees_path, class: "btn btn-default form-control" %>
        </section>

      <% end %>
    </div>
  </div>
</div>
