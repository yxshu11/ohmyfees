<% provide(:title, 'All Staffs') %>

<div class="container">
<h1>All Staffs</h1>
  <div class="row">
    <div class="col-md-12 well">
    <%= will_paginate %>
      <table class="table">
        <tr>
          <td class="no-repeat-header">ID</td>
          <td class="no-repeat-header">Name</td>
          <td class="no-repeat-header">Staff Number</td>
          <td class="no-repeat-header">Email</td>
          <td class="no-repeat-header">Contact Number</td>
          <td class="no-repeat-header">Admin Account?</td>
          <td class="no-repeat-header">Action</td>
        </tr>
        <% @staffs.each do |s| %>
        <tr>
          <td><%= s.id %></td>
          <td><%= s.name %></td>
          <td><%= s.staff_number %></td>
          <td><%= s.email %></td>
          <td><%= s.contact_number %></td>
          <td><%= s.admin.to_s.titleize %></td>
          <td>
            <%= link_to "Delete", s, method: :delete,
                        data: { confirm: "Comfirm to remove this staff?" } %>
          </td>
        </tr>
        <% end %>
      </table>
      <%= will_paginate %>

    <div class="center">
      <%= link_to "Back", dashboard_path, class: "btn btn-default" %>
    </div>
  </div>
  </div>
</div>
