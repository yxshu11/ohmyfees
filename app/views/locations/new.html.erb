<% provide(:title, 'Add Location') %>

<div class="container">
<h1>Add Sign-in Location</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <section class="alert alert-info">
        <p>Please verify the location address with
        <a href="http://www.latlong.net/convert-address-to-lat-long.html" target="new"><b>LatLong.net</b></a></p>
        <p>and obtain the latitude and longitude for the location address. </p>
      </section>
      <%= form_for(@location) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :latitude %>
        <%= f.number_field :latitude, :class => 'form-control', :step => 'any' %>

        <%= f.label :longitude %>
        <%= f.number_field :longitude, :class => 'form-control', :step => 'any' %>

        <%= f.submit "Add", class: "btn btn-primary" %>

        <br><br>

        <%= link_to "Back", dashboard_path, class: "btn btn-default form-control" %>
      <% end %>
    </div>
  </div>
</div>
